
@{
    ViewBag.Title = "Đăng ký";
    @model GameChien.Models.FormModel.RegisterFormModel
}
<style>
    label span {
        opacity: 0.8;
    }
</style>
<h1 class="text-center">ĐĂNG KÝ</h1>
<form method="post" action="/dang-ky" class="mt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-6 d-flex flex-column align-items-sm-end">
                <label class="mb-3">
                    <span class="mb-2 d-block">Tên tài khoản</span>
                    @Html.TextBoxFor(t => t.AccountName, new { @class = "form-control" })
                </label>
                <label class="mb-3">
                    <span class="mb-2 d-block">Mật khẩu</span>
                    @Html.PasswordFor(t => t.Password, new { @class = "form-control" })
                </label>
                <label class="mb-3">
                    <span class="mb-2 d-block">Nhập lại mật khẩu</span>
                    @Html.PasswordFor(t => t.RetypePassword, new { @class = "form-control" })
                </label>
            </div>
            <div class="col-12 col-sm-6 d-flex flex-column align-items-sm-start">
                <label class="mb-3">
                    <span class="mb-2 d-block">Họ và tên</span>
                    @Html.TextBoxFor(t => t.FullName, new { @class = "form-control" })
                </label>
                <label class="mb-3">
                    <span class="mb-2 d-block">Số điện thoại</span>
                    @Html.TextBoxFor(t => t.PhoneNumber, new { @class = "form-control" })
                </label>
                <label class="mb-3">
                    <span class="mb-2 d-block">Tên InGame</span>
                    @Html.TextBoxFor(t => t.GameAccount, new { @class = "form-control" })
                </label>
            </div>
            <div class="d-flex flex-column align-items-center">
                @Html.ValidationSummary(false, null, new { @class = "text-danger mb-3" })
                <div>
                    <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="mt-3 text-center">
    <a href="/dang-nhap" class="text-decoration-none text-warning">Bạn đã có tài khoản? <i class="fa fa-angle-double-right"></i> ĐĂNG NHẬP</a>
</div>
